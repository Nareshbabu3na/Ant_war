<project name="java tasks" default="package">
	<target name="compile" description="compile the java files">
		<mkdir dir="build/classes"/>
		<javac srcdir="src" destdir="build/classes"/>
	</target>
	<target name="package" depends="compile" description="packageing the files">
		<mkdir dir="build/war"/>
		<war destfile="build/war/HelloWorld.war" webxml="WebContent/WEB-INF/web.xml">
			<fileset dir="WebContent"/>
			<lib dir="WebContent/WEB-INF/lib"/>
			<classes dir="build/classes"/>
		</war>
